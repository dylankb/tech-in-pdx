<div id="notice-wrapper">
  <% if flash[:notice] %>
      <p class="alert notice"><%= flash[:notice] %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </p>
  <% elsif flash[:alert] %>
      <p class="alert"><%= flash[:alert] %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </p>
  <% end %>
</div>
