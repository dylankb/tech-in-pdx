<% if object.errors.any? %>
  <div class="alert alert-danger">
    <div class="container">
      <h4>Please fix these errors:</h4>
        <ul>
          <% object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  </div>
<% end %>
