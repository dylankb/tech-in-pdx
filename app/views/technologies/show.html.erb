<div class="container">
  <h2><%= @technology.name %></h2>

  <h3>Companies using this tech:</h3>

  <table class="table">
    <thead>
      <th>Company name</th>
      <th>Description</th>
      <th>Technologies</th>
      <th>Locations</th>
      <th>Twitter Followers</th>
    </thead>
    <tbody id="company-list">
    <% @technology.companies.each do |company| %>
      <%= render company %>
    <% end %>
    </tbody>
  </table>
</div>
