<%= render "layouts/errors", :object => @company %>

<%= form_for @company do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
    <%= f.label :technologies %>
    <%= f.text_field :technologies %>
  </div>
  <div class="form-group">
    <%= f.label :street_1 %>
    <%= f.text_field :street_1 %>
  </div>
  <div class="form-group">
    <%= f.label :street_2 %>
    <%= f.text_field :street_2 %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="form-group">
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>
  <%= f.submit %>
<% end %>
